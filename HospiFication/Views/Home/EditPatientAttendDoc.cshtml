@model HospiFication.Models.Patient
@{
    ViewBag.Title = "Передача другому лечащему врачу";
}
<form asp-action="EditPatientAttendDoc" asp-controller="home" asp-route-id="@Model.PatientID">
    <div class="form-group">
        <input type="number" asp-for="PatientID" hidden="true"  class="form-control" />
        <label asp-for="FIO" class="control-label">ФИО пациента:   </label>
        <label asp-for="FIO" class="control-label">@Model.FIO</label>
        <input type="text" asp-for="FIO" hidden="true"  class="form-control" />
        <input type="text" asp-for="BirthDay" hidden="true"  class="form-control" />
        <input type="text" asp-for="EmergencyDocID" hidden="true"  class="form-control" />
        <input type="text" asp-for="EntranceDate" hidden="true"  class="form-control" />
        <input type="text" asp-for="Extracted" hidden="true"  class="form-control" />
        <input type="text" asp-for="Symptoms" hidden="true"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AttendingDocID" class="control-label" >Выберите нового лечащего врача:   </label>
        <select asp-for="AttendingDocID" asp-items="Model.AttendingDocIDs" class="form-control" ></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-light" />
    </div>
</form>
        <div class="form-group">
            <a asp-action="Patients" class="btn btn-primary">Назад</a>
        </div>