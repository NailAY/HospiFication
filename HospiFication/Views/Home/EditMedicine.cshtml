@model HospiFication.Models.Medicine
@{
    ViewBag.Title = "Редактирование информации о препарате";
}
<form asp-action="EditMedicine" asp-controller="home" asp-route-id="@Model.MedicineID">
    <div class="form-group">
        <input type="number" asp-for="MedicineID" hidden="true"  class="form-control" />
        <label asp-for="MedicineName" class="control-label">Наименование препарата</label>
        <input type="text" asp-for="MedicineName" class="form-control" />
        <label asp-for="Disease" class="control-label">В каких случаях назначается</label>
        <input type="text" asp-for="Disease" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-light" />
    </div>
</form>
        <div class="form-group">
            <a asp-action="Medicines" class="btn btn-primary">Назад</a>
        </div>