@model HospiFication.Models.User

@{
	ViewBag.Title = "Добавление нового лечащего врача";
}

    <form asp-action="AddAttendDocUser" asp-controller="home" method="post" enctype="multipart/form-data">
        
        <div class="form-group">
            <label asp-for="RoleId" hidden="true" class="control-label">Роль ID</label>
            <input type="text"  asp-for="RoleId" hidden="true" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Role" hidden="true" class="control-label">Роль</label>
            <input type="text"  asp-for="Role" hidden="true" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="control-label">ФИО лечащего врача</label>
            <input type="text" asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="HashedPassword" class="control-label">Пароль</label>
            <input type="text" asp-for="HashedPassword" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-light" />
        </div>
        <div class="form-group">
            <a asp-action="AttendDocs" class="btn btn-primary">Назад</a>
        </div>
    </form>
