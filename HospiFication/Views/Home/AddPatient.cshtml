@model HospiFication.Models.Patient
@{
	ViewBag.Title = "Добавление нового пациента";
}

    <form asp-action="AddPatient" asp-controller="home" method="post" enctype="multipart/form-data">
        
        <div class="form-group">
            <label asp-for="FIO" class="control-label">ФИО пациента</label>
            <input type="text" asp-for="FIO" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BirthDay" class="control-label">Дата рождения</label>
            <input type="text" asp-for="BirthDay" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EmergencyDocID" class="control-label" hidden="true" >ID врача приёмного отделения</label>
            <input type="text" asp-for="EmergencyDocID" hidden="true" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Symptoms" class="control-label">Симптомы</label>
            <input type="text" asp-for="Symptoms" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Extracted" class="control-label" hidden="true" >Выписан</label>
            <input type="text" asp-for="Extracted" hidden="true" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EntranceDate" class="control-label" hidden="true" >Дата госпитализации</label>
            <input type="text" asp-for="EntranceDate" hidden="true" class="form-control" />
        </div>

         <div>
            <label asp-for="AttendingDocID"></label>
            <select asp-for="AttendingDocID" asp-items="Model.AttendingDocIDs"></select>
        </div>

        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-primary">Назад</a>
        </div>
    </form>
